---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Tag from '../ui/Tag.astro';

const projects = await getCollection('projects');
---

<section id="work" class="mx-auto max-w-[1000px] my-16 mb-40">
  <h2 class="font-bold pt-[5vh] mb-[5vh]">
    <span class="font-medium text-yellow dark:text-yellow"># </span>
    Featured Work
  </h2>

  {projects.map((project, index) => {
    const isLeft = index % 2 === 1;

    return (
      <article class:list={[
        "grid mb-40 bg-white dark:bg-almost-black rounded-lg shadow-md",
        isLeft ? "grid-cols-[2fr_3fr]" : "grid-cols-[3fr_2fr]",
        "md:mx-[-30px] md:rounded-none",
        "sm:grid-cols-1 sm:mx-[-20px] sm:mb-16"
      ]}>
        <div class:list={[
          "p-10 lg:p-9 md:p-6 grid",
          "grid-areas-project",
          isLeft ? "order-1" : "order-1 sm:order-2"
        ]}>
          {/* Project ID */}
          <h3 class="grid-in-id text-yellow font-semibold text-xl leading-none m-0 md:text-base md:leading-normal md:mr-2">
            {'0' + (index + 1).toString().slice(-2)}
          </h3>

          {/* Project Links */}
          <div class="grid-in-links">
            {project.data.repo && (
              <a href={project.data.repo} title={`${project.data.title} Github repo`} target="_blank" rel="noopener" aria-label={`View ${project.data.title} source code on GitHub`} class="ml-4 text-light-grey hover:text-almost-black dark:hover:text-white transition-colors">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
            {project.data.link && (
              <a href={project.data.link} title="View live" target="_blank" rel="noopener" aria-label={`View ${project.data.title} live website`} class="ml-4 text-light-grey hover:text-almost-black dark:hover:text-white transition-colors">
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M5 3c-1.093 0-2 .907-2 2v14c0 1.093.907 2 2 2h14c1.093 0 2-.907 2-2v-7h-2v7H5V5h7V3H5zm9 0v2h3.586l-9.293 9.293 1.414 1.414L19 6.414V10h2V3h-7z"/>
                </svg>
              </a>
            )}
          </div>

          {/* Project Title */}
          <h3 class="grid-in-title text-lg">{project.data.title}</h3>

          {/* Project Description */}
          <div class="grid-in-text">
            <p class="text-base leading-relaxed" set:html={project.body} />
          </div>

          {/* Project Tags */}
          <div class="grid-in-tags mb-1 md:mb-0">
            {project.data.tags?.map(tag => (
              <Tag>{tag}</Tag>
            ))}
          </div>
        </div>

        {/* Project Image */}
        <div class:list={[
          "bg-lighter-grey dark:bg-darkest-grey",
          isLeft ? "order-2" : "order-2 sm:order-1"
        ]}>
          {project.data.image && (
            <Image
              src={project.data.image}
              alt={project.data.title}
              class="w-full h-full object-cover"
            />
          )}
        </div>
      </article>
    );
  })}
</section>

<style>
  .grid-areas-project {
    grid-template-areas:
      "id    links"
      "title title"
      "text  text"
      "tags  tags";
    grid-template-columns: 1fr auto;
  }

  @media (max-width: 768px) {
    .grid-areas-project {
      grid-template-areas:
        "id title links"
        "text text text"
        "tags tags tags";
      grid-template-columns: auto 1fr auto;
    }
  }

  .grid-in-id { grid-area: id; }
  .grid-in-links { grid-area: links; }
  .grid-in-title { grid-area: title; }
  .grid-in-text { grid-area: text; }
  .grid-in-tags { grid-area: tags; }
</style>
